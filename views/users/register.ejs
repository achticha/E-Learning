      box-shadow: 0px 0px 30px 1px rgba(0, 255, 234, 0.3);
      opacity: 0;
      z-index: 1;
    }

    form.sign-up-form:hover {
      transform: scale(0.98);
      border-radius: 20px;
    }

    form.sign-in-form {
      height: 100%;
      background-color: #ffffff;
      border-radius: 10px;
      transition: all .2s;
      z-index: 2;
      box-shadow: 0px 0px 30px 1px rgba(0, 255, 234, 0.3);
      z-index: 2;
    }

    form.sign-in-form:hover {
      transform: scale(0.98);
