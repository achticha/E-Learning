  <script>
    function saveinfo(event) {
      if (!validata(event)) {
          event.preventDefault();
          return false; 
      }
    }
  
    function validata(event) {
      var pass = true;
      var txt_username = document.querySelector("#txt_username");
      var txt_password = document.querySelector("#txt_password");
  
      if (txt_username.value.length <= 0) {
        pass = false;
        Swal.fire({
          icon: 'error',
          title: 'username',
          text: "Please insert username"
        });
        event.preventDefault(); // หยุดการส่งฟอร์ม
      } else if (txt_password.value.length <= 0) {
        pass = false;
        Swal.fire({
          icon: 'error',
          title: 'password',
          text: "Please insert password"
        });
        event.preventDefault(); 
      }
      return pass;
    }
    document.getElementById('loginBtn').addEventListener('click', function(event) {
      saveinfo(event);
    });
  </script>
  
  


