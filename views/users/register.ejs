      }

      .right-panel .image,
      .right-panel .content {
        transform: translateY(300px);
      }

      .container.sign-up-mode .signin-signup {
        top: 5%;
        transform: translate(-50%, 0);
      }
    }

    @media (max-width: 860px) {
      form {
        padding: 0 1.5rem;
      }

      .image {
        display: none;
      }
      

      .panel .content {
